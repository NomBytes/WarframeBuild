<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.nombi.warframebuild.WarframeDetailFragment">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="46dp"
            android:layout_weight="0.06"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/warframe_char_name"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="1.00"
                android:text="name"
                android:textAlignment="center"
                android:textAppearance="@style/TextAppearance.AppCompat"
                android:textSize="36sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="0.38"
                app:srcCompat="@mipmap/ic_launcher" />

        </LinearLayout>

        <TextView
            android:id="@+id/base_stats_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Base Stats"
            android:textAlignment="center"
            android:textAppearance="@style/TextAppearance.AppCompat"
            android:textSize="24sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/warframe_health"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="health"
            android:textAlignment="center" />

        <TextView
            android:id="@+id/warframe_shields"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:text="sheild"
            android:textAlignment="center" />

        <TextView
            android:id="@+id/warframe_power"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="power"
            android:textAlignment="center" />

        <TextView
            android:id="@+id/warframe_armor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="armor"
            android:textAlignment="center" />

        <TextView
            android:id="@+id/warframe_sprint_speed"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="speed"
            android:textAlignment="center" />

        <TextView
            android:id="@+id/warframe_pwr_range"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="range"
            android:textAlignment="center" />

        <TextView
            android:id="@+id/warframe_pwr_strength"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="strength"
            android:textAlignment="center" />

        <TextView
            android:id="@+id/warframe_pwr_duration"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="duration"
            android:textAlignment="center" />

        <TextView
            android:id="@+id/warframe_pwr_efficency"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="efficency"
            android:textAlignment="center" />

        <Button
            android:id="@+id/select_warframe_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.06"
            android:text="Select this Warframe" />

    </LinearLayout>


</FrameLayout>
