<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.nombi.warframebuild.ModDetailFragment">

    <!-- TODO: Update blank fragment layout -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/current_polarity_text"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Current Polarity: "
            android:textAppearance="@style/TextAppearance.AppCompat"
            android:textSize="24sp" />

        <ImageView
            android:id="@+id/polarityImage"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            app:srcCompat="@android:drawable/ic_delete" />

        <Button
            android:id="@+id/change_polarity_button"
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:text="Change" />

    </LinearLayout>

    <TextView
        android:id="@+id/mod_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Empty Slot"
        android:textAlignment="center"
        android:textColor="@color/wfDark"
        android:textSize="24sp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/level_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Level: "
            android:textAppearance="@style/TextAppearance.AppCompat"
            android:textSize="18sp"
            android:textStyle="bold" />

        <SeekBar
            android:id="@+id/level_seekbar"
            style="@android:style/Widget.SeekBar"
            android:layout_width="273dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.09"
            android:max="7"
            android:progress="0"
            android:thumb="@android:drawable/presence_invisible"
            android:visibility="visible" />

        <TextView
            android:id="@+id/level_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.03"
            android:text="N/A"
            android:textAlignment="center"
            android:textAppearance="@style/TextAppearance.AppCompat"
            android:textSize="18sp"
            android:textStyle="bold" />

    </LinearLayout>

    <TextView
        android:id="@+id/mod_cost_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="Mod Cost: N/A"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/mod_effect_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="+any% attribute"
        android:textAlignment="center"
        android:textSize="18sp" />

    <Button
        android:id="@+id/change_mod_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Change Mod" />

    <Button
        android:id="@+id/clear_mod_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="CLEAR MOD" />

    <Button
        android:id="@+id/confirm_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Confirm Slot" />

    <Button
        android:id="@+id/back_to_loadout_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Back to Loadout" />

</LinearLayout>
